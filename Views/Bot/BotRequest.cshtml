@*@{
    Layout = null;
}*@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Robot Request Form</title>
    @Styles.Render("~/Content/Bot.css")
    <style>
        body {
            padding-top: 0px;
            background-image: url("../../Content/screen3.jpg");
            background-attachment:fixed;
            background-repeat:no-repeat;
        }
        form{
            background-color: dimgray;
            padding:5px;
        }
        input{
            border-radius: 10px;
            background-color: black;
            color:gold;
            padding:5px;
        }
        p {
            background-color: transparent;
            color: white;
        }
    </style>
</head>
<body>
    <h2>Robot Request</h2>
    <article>
    <form class="justify-content-md-center" name="botRequest" method="post">
        <p>Name of robot model: </p>
        <input type="text" name="BotName" id="BotName" />
        <p>Robot Function: </p>
        <input type="text" name="BotFunc" id="BotFunc" />
        <p>Intended Mine System:</p>
        <input type="text" name="MineSys" id="MineSys" />
        <p>Quantity: </p>
        <input type="number" name="Quantity" id="Quantity" />
        <hr/>
        <input type="submit" value="Submit Order Request" />
    </form>
    </article>
</body>
</html>